{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "removeComments": true,
    "outDir": "./dist",
    "rootDir": "./"
  },
  "include": ["*.ts", "**/*.ts"],
  "exclude": ["node_modules"]
}
